
<BigTitle@MDRelativeLayout>:
    size_hint: 1, 0.18250539957
    pos_hint: {"top": 1}
    on_size: app.update_fonts(root.parent.width, root.parent.height)
    canvas.before:
        Color:
            rgba: color1
        Rectangle:
            size: self.size
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                markup: True
                text: "[size={}][font={}]TMS[/font]\n [font={}]MOBILE READER[/font][/size]".format(int(app.font_size_1), bold_font, regular_font)
                halign: "center"
                color: color4


<TextBox@MDTextField>:
    color_mode: 'custom'
    hint_text: 'Email'
    mode: 'rectangle'
    line_color_focus: color1
    # size_hint: None, None
    font_name: regular_font


<FlatButton@MDRaisedButton>:
    theme_text_color: "Custom"
    font_name: bold_font
    text_color: color4
    md_bg_color: color1

<RectangleButton@MDRectangleFlatButton>:
    text: "SING UP"
    theme_text_color: "Custom"
    text_color: color1
    line_color: color1
    font_name: bold_font


<TopTitleBar@RelativeLayout>:
    MDToolbar:
        title: "TMS"
        font_name: bold_font
        pos_hint: {'top': 1}
        md_bg_color: color1
        right_action_items: [["menu"]]
        left_action_items: [["account-circle"]]
        elevation: 8


